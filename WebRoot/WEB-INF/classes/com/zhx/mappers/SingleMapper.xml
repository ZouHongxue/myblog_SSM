<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.zhx.dao.SingleDao">
 	<select id="getArticleById" parameterType="int" resultType="Article">
 		select * from article where id= #{id}
 	</select>
 	
 	<select id="getLifeById" parameterType="int" resultType="Life">
 		select * from life where id = #{id}
 	</select>
 	
 	<select id="getMyStoryById" parameterType="int" resultType="MyStory">
 		select * from mystory where id = #{id}
 	</select>
 	
 	<select id="getCodeStoryById" parameterType="int" resultType="CodeStory">
 		select * from codestory where id = #{id}
 	</select>
 	
 	<select id="getStudyById" parameterType="int" resultType="Study">
 		select * from study where id = #{id}
 	</select>
 	
 	<select id="getWorkById" parameterType="int" resultType="Work">
 		select * from work where id = #{id}
 	</select>
 </mapper>
